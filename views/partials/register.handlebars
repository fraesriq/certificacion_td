<div class="modal fade" id="modalRegisterForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h4 class="modal-title w-100 font-weight-bold">Registrar</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="" id="formRegister">
        <div class="modal-body mx-3">
          <div class="md-form mb-2">
            <i class="fa fa-user prefix grey-text"></i>
            <input type="text" id="registerFormname" class="form-control validate">
            <label data-error="wrong" data-success="right" for="defaultForm-name">Ingrese su Nombre</label>
          </div>

          <div class="md-form mb-2">
            <i class="fa fa-envelope prefix grey-text"></i>
            <input type="email" id="registerFormemail" class="form-control validate">
            <label data-error="wrong" data-success="right" for="defaultForm-email">Ingrese un Email</label>
          </div>

          <div class="md-form mb-3">
            <i class="fa fa-lock prefix grey-text"></i>
            <input type="password" id="registerFormpass" class="form-control validate">
            <label data-error="wrong" data-success="right" for="defaultForm-pass">Ingrese un password</label>
          </div>

          <div class="md-form mb-3">
            <i class="fa fa-lock prefix grey-text"></i>
            <input type="password" id="verifyFormpass" class="form-control validate">
            <label data-error="wrong" data-success="right" for="verifyForm-pass">Re-Ingrese password</label>
          </div>
        </div>
        <div class="modal-footer d-flex justify-content-center">
          <button class="btn btn-default" id="btn_send_login">Registrar</button>
        </div>
      </form>
    </div>
  </div>
</div>