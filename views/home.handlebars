<section class="featured spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="section-title">
          <h2>NOTICIAS</h2>
        </div>        
      </div>
    </div>
    <div class="row featured__filter" id="MixItUp2839E6">
      {{#if posts }}
      {{#each posts}}
      {{>card
      id=this.dataValues.id
      idPublicacion=this.dataValues.id
      imagen=this.dataValues.imagen
      title=this.dataValues.title
      content=this.dataValues.content
      categoryId=this.dataValues.category.dataValues.id
      categoryName=this.dataValues.category.dataValues.name
      autor = this.dataValues.user.dataValues.name
      }}
      {{/each}}
      {{else}}
      <div>No se encuentran productos ingresados en esta Categoria</div>
      {{/if}}
    </div>
  </div>
</section>

<script>
  const showDetail = (idPublicacion) => {        
    if (localStorage.getItem("jwt")) {
      location.href = `/detail/${idPublicacion}?token=` + localStorage.getItem("jwt")
    } else {
      location.href = `/detail/${idPublicacion}`
    }
  }
</script>