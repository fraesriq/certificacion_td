<!-- Contact Form Begin -->
<div class="contact-form spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="contact__form__title">
          <h2>Escribanos su consulta</h2>
        </div>
      </div>
    </div>
    <form action="#" id="formContact" name="formContact">
      <div class="row">
        <div class="col-lg-6 col-md-6">
          <input type="text" id="name" placeholder="Nombre">
        </div>
        <div class="col-lg-6 col-md-6">
          <input type="email" id="email" placeholder="Email">
        </div>
        <div class="col-lg-12 text-center">
          <textarea placeholder="Mensaje" id="message"></textarea>
          <button type="submit" class="site-btn">Enviar</button>
        </div>
      </div>
    </form>
  </div>
</div>
<!-- Contact Form End -->

<script>
  //EVENTO SUBMIT FORMULARIO CONTACTOS
  formContact.addEventListener("submit", (event) => {

    event.preventDefault();

    var fieldsValidate = {
      name: { type: 'input', name: 'Nombre' },
      email: { type: 'input', name: 'Email' },
      message: { type: 'input', name: 'Mensaje' }
    };

    //Si paso todas las validaciones
    if (validateForm(fieldsValidate, 'formContact', false)) {
      alertSystem('success', 'Consulta enviada con exito');
      formContact.reset();
    }

  });
</script>